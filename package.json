{
  "name": "openerp-scanner-app",
  "version": "1.0.0",
  "description": "OpenERP Scanner App for iPhone",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run -c test/vitest.config.ts && npm run cleanup:vitest",
    "coverage": "vitest run --coverage -c test/vitest.config.ts --reporter verbose && npm run cleanup:vitest",
    "coverage:clean": "vitest run --coverage -c test/vitest.config.ts && npm run cleanup:vitest",
    "cleanup:vitest": "node -e \"const fs = require('fs'); const path = require('path'); const testDir = path.join(__dirname, 'test'); fs.readdirSync(testDir).filter(f => f.includes('timestamp-') && f.endsWith('.mjs')).forEach(f => fs.unlinkSync(path.join(testDir, f)));\" > nul 2>&1"
  },
  "dependencies": {
    "@danielfrey63/openerp-ts-client": "^1.0.12",
    "@yudiel/react-qr-scanner": "^2.2.1",
    "@zxing/browser": "^0.1.4",
    "@zxing/library": "^0.21.0",
    "axios": "^1.4.0",
    "buffer": "^6.0.3",
    "cookie": "^0.5.0",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "qr-scanner": "^1.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.2.0",
    "stream-browserify": "^3.0.0",
    "timers-browserify": "^2.0.12",
    "util": "^0.12.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__react": "^10.0.1",
    "@types/xml2js": "^0.4.11",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "jsdom": "^26.0.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vitest": "^3.0.9"
  }
}
